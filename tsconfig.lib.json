{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "lib",
    "incremental": true,
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    /* "!node_modules/yargs", */
    "src/**/*.example.ts",
    "src/**/*.spec.ts"
  ]
}
